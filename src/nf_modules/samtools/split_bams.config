profiles {
  docker {
    docker.temp = 'auto'
    docker.enabled = true
    process {
      withName: split_bam {
        container = "samtools:1.7"
        cpus = 2
      }
    }
  }
  singularity {
    singularity.enabled = true
    process {
      withName: split_bam {
        container = "file://bin/samtools:1.7.sif"
        cpus = 2
      }
    }
  }
  psmn {
    process{
      withName: split_bam {
        beforeScript = "source /usr/share/lmod/lmod/init/bash; module use ~/privatemodules"
        module = "samtools/1.7"
        executor = "sge"
        clusterOptions = "-m e -cwd -V"
        cpus = 1
        memory = "20GB"
        time = "12h"
        queue = 'monointeldeb128'
      }
    }
  }
}
