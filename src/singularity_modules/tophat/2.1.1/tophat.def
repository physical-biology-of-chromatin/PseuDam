Bootstrap: docker
From: ubuntu:18.04

%labels
MAINTAINER Laurent Modolo

%pos
mkdir -p /sps /pbs /scratch
TOPHAT_VERSION=2.1.1
PACKAGES=tophat=${BOWTIE2_VERSION}*

apt-get update && \
apt-get install -y --no-install-recommends ${PACKAGES} && \
apt-get clean

%environment
export TOPHAT_VERSION=2.1.1

%runscript
exec /bin/bash "$@"
