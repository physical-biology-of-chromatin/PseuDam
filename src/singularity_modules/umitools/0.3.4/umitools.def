Bootstrap: docker
From: ubuntu:18.04
%labels
MAINTAINER Laurent Modolo
%post

UMITOOLS_VERSION=0.3.4
PACKAGES="git \
build-essential \
python-pip \
ca-certificates \
python-setuptools \
python-dev \
python-numpy \
python-wheel \
zlib1g-dev"

apt-get update && \
apt-get install -y --no-install-recommends ${PACKAGES} && \
apt-get clean

pip install umitools==${UMITOOLS_VERSION}

%environment
export UMITOOLS_VERSION=0.3.4

%runscript
exec /bin/bash "$@"
