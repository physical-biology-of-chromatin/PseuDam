Bootstrap: docker
From: debian:stretch

%labels
MAINTAINER Laurent Modolo

%post
DEEPTOOLS_VERSION=3.1.1
PACKAGES="build-essential \
             python3-pip \
             python3-setuptools \
             python3-dev \
             python3-wheel \
             zlib1g-dev \
             libcurl4-gnutls-dev"

apt-get update && \
apt-get install -y --no-install-recommends ${PACKAGES} && \
apt-get clean

pip3 install deeptools==${DEEPTOOLS_VERSION}

%environment
export DEEPTOOLS_VERSION=3.0.2

%runscript
exec /bin/bash "$@"
