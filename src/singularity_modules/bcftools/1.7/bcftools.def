Bootstrap: docker
From: ubuntu:18.04

%labels
MAINTAINER Laurent Modolo

%pos
mkdir -p /sps /pbs /scratch
BCFTOOLS_VERSION=1.7
PACKAGES=bcftools=${BCFTOOLS_VERSION}*

apt-get update && \
apt-get install -y --no-install-recommends ${PACKAGES} && \
apt-get clean

%environment
export BCFTOOLS_VERSION=1.7

%runscript
exec /bin/bash "$@"
