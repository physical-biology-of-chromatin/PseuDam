Bootstrap: docker
From: ubuntu:18.04

%labels
MAINTAINER Laurent Modolo

%post
SRATOOLKIT_VERSION=2.8.2
PACKAGES=sra-toolkit=${SRATOOLKIT_VERSION}*

apt-get update && \
apt-get install -y --no-install-recommends ${PACKAGES} && \
apt-get clean

%environment
export SRATOOLKIT_VERSION=2.8.2

%runscript
exec /bin/bash "$@"
