Bootstrap: docker
From: ubuntu:16.04

%labels
MAINTAINER Laurent Modolo

%post
mkdir -p /sps /pbs /scratch
BEDTOOLS_VERSION=2.25.0
PACKAGES=bedtools=${BEDTOOLS_VERSION}*

apt-get update && \
apt-get install -y --no-install-recommends ${PACKAGES} && \
apt-get clean

%environment
export BEDTOOLS_VERSION=2.25.0

%runscript
exec /bin/bash "$@"
